<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content" android:layout_height="match_parent">
<RelativeLayout    
	android:orientation="vertical"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">
    <TextView 
    	android:layout_height="wrap_content" 
    	android:id="@+id/textView1" 
    	android:layout_width="wrap_content" 
    	android:text="Name: " 
    	android:textSize="15sp" 
    	android:textStyle="bold"
		android:typeface="serif"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="10dp">
    </TextView>
    <EditText 
    	android:text="" 
    	android:layout_width="match_parent"
    	android:id="@+id/edtName" 
    	android:singleLine="true" 
	    android:layout_height="wrap_content" 
    	android:layout_below="@+id/textView1" 
    	android:layout_alignLeft="@+id/textView1"
    	android:layout_marginRight="10dp">
    </EditText>
    <TextView android:text="Description:" 
    	android:layout_height="wrap_content" 
    	android:layout_below="@+id/edtName" 
    	android:id="@+id/textView2" 
    	android:layout_width="wrap_content" 
    	android:layout_alignLeft="@+id/textView1"
    	android:textSize="15sp" 
    	android:textStyle="bold"
		android:typeface="serif"
		android:layout_marginTop="5dp">
    </TextView>
    <EditText 
    	android:scrollHorizontally="false"
    	android:maxLines="5"
    	android:lines="5"
    	android:layout_height="wrap_content" 
    	android:text="" 
    	android:layout_below="@+id/textView2" 
    	android:id="@+id/edtDesc" 
    	android:layout_alignLeft="@+id/textView2"
   	  	android:layout_width="match_parent"
   	  	android:singleLine="false"
   	  	android:scrollbars="vertical"
   	  	android:gravity="top|left" 
   	  	android:inputType="textMultiLine"		
   	  	android:layout_marginRight="10dp">
   	</EditText>
    <TextView 
    	android:text=" Shop type: " 
    	android:layout_height="wrap_content" 
    	android:layout_below="@+id/edtDesc" 
    	android:id="@+id/textView3" 
    	android:layout_width="wrap_content" 
    	android:layout_alignLeft="@+id/edtDesc"
    	android:textSize="15sp" 
    	android:textStyle="bold"
		android:typeface="serif"
		android:layout_marginTop="5dp">
    </TextView>
    <Spinner 
    	android:id="@+id/spnType" 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content" 
    	android:layout_below="@+id/textView3" 
    	android:layout_alignLeft="@+id/textView3"
   	  	android:layout_marginRight="10dp"
   	  	android:prompt="@string/type">
    </Spinner>
    <TextView 
    	android:text="Country of Origin:" 
    	android:id="@+id/textView4" 
    	android:layout_below="@+id/spnType" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	android:layout_alignLeft="@+id/spnType"
    	android:textSize="15sp" 
    	android:textStyle="bold"
		android:typeface="serif"
		android:layout_marginTop="5dp">
    </TextView>
    <Spinner 
    	android:id="@+id/spnCountry" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_below="@+id/textView4" 
    	android:layout_alignLeft="@+id/textView4" 
    	android:layout_alignRight="@+id/spnType">
    </Spinner>
    <TextView 
    	android:text="Budget" 
    	android:id="@+id/textView5" 
    	android:layout_below="@+id/spnCountry" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_alignLeft="@+id/spnCountry"
    	android:textSize="15sp" 
    	android:textStyle="bold"
		android:typeface="serif"
		android:layout_marginTop="5dp">
    </TextView>
    <TextView 
    	android:text="(Minimum)" 
    	android:id="@+id/textView6" 
    	android:layout_below="@+id/textView5" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_alignLeft="@+id/textView5">
    </TextView>
    <TextView 
    	android:text="(Maximum)" 
    	android:id="@+id/textView7" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_toRightOf="@+id/textView6"
    	android:layout_alignLeft="@+id/budMax" 
    	android:layout_alignTop="@+id/textView6" 
    	android:layout_alignBottom="@+id/textView6">
    </TextView>
    <EditText 
    	android:layout_below="@+id/textView6" 
    	android:text="" 
    	android:layout_width="150dp" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/budMin" 
    	android:layout_alignLeft="@+id/textView6"
        android:singleLine="true"
        android:inputType="numberDecimal">
    </EditText>
        <EditText 
    	android:text="" 
    	android:layout_width="150dp" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/budMax" 
    	android:layout_toRightOf="@+id/budMin"
    	android:layout_alignTop="@+id/budMin"
    	android:singleLine="true"
    	android:inputType="numberDecimal">
    </EditText>
    <TextView 
    	android:text="Longitude" 
    	android:id="@+id/textView8" 
    	android:layout_below="@+id/budMin" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_alignLeft="@+id/budMin"
    	android:textSize="15sp" 
    	android:textStyle="bold"
		android:typeface="serif"
		android:layout_marginTop="5dp">
    </TextView>
    <EditText 
    	android:layout_below="@+id/textView8" 
    	android:text="" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/longitude" 
    	android:layout_alignLeft="@+id/textView8"
    	android:layout_width="150dp"
   		android:inputType="numberDecimal">
    </EditText>
    <EditText 
    	android:text="" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/latitude" 
    	android:layout_toRightOf="@+id/longitude" 
    	android:layout_alignTop="@+id/longitude" 
    	android:layout_alignBottom="@+id/longitude"
    	android:layout_width="150dp"
    	android:inputType="numberDecimal">
    </EditText>
    <TextView 
    	android:text="Latitude"
    	android:id="@+id/textView9" 
    	android:layout_above="@+id/latitude" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_alignLeft="@+id/latitude"
    	android:textSize="15sp" 
    	android:textStyle="bold"
		android:typeface="serif">
    </TextView>
    <Button 
    	android:id="@+id/save" 
    	android:layout_below="@+id/latitude" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Save"
    	android:layout_centerHorizontal="true">
    </Button>
    
    
</RelativeLayout>
</ScrollView>